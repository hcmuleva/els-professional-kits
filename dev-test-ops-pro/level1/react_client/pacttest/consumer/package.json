{
  "name": "lms-consumer-pact-tests",
  "version": "1.0.0",
  "description": "Pact consumer tests for LMS Frontend",
  "main": "index.js",
  "scripts": {
    "test:auth": "jest test/auth.pact.test.js --runInBand",
    "test:user": "jest test/user.pact.test.js --runInBand",
    "test:consumer": "jest test/*.pact.test.js --runInBand",
    "test:consumer:watch": "jest test/*.pact.test.js --watch --runInBand",
    "publish:pacts": "node scripts/publishPacts.js",
    "clean:pacts": "rm -rf pacts/*.json",
    "clean:logs": "rm -rf logs/*.log",
    "test:ci": "npm run test:consumer && npm run publish:pacts"
  },
  "dependencies": {
    "axios": "^1.11.0"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^15.0.1",
    "@pact-foundation/pact-node": "^10.18.0",
    "dotenv": "^16.3.1",
    "jest": "^30.1.3",
    "jest-pact": "^0.11.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.pact.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  },
  "keywords": [
    "pact",
    "consumer",
    "contract-testing",
    "lms"
  ],
  "author": "LMS Team",
  "license": "MIT"
}
